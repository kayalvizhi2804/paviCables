    <title>Add Customers</title>
    <style>
        .form-group{
            width:50%;
            margin:auto;
            margin-top:100px;
        }
        .form-group .form-control{
            margin:20px 0px;
        }
        body {
  background-image: url('/img/logimage.jpg');
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-size: cover;
}

</style>
</head>
    <body>
        <div className="container">
            <form action="/addcus" class="form-group" method="POST">
                <input class="form-control" type="text" name="name" placeholder="Name">
                <select class="form-control" id="stbStatus" name="stbStatus">
                    <option value="Active">Active</option>
                    <option value="Deactive">Deactive</option>
                </select>
                <input type="text" class="form-control" name="activatedDate" placeholder="Activated Date">
                <input type="text" class="form-control" name="server" placeholder="Server">
                <input type="text" class="form-control" name="sn" placeholder="Serial Number">
                <input type="text" class="form-control" name="stockLoc" placeholder="Stock Location">
                <textarea type="text" class="form-control" name="address" placeholder="Address"></textarea>
                <input type="text" name="phone" class="form-control" placeholder="Phone">
                <input type="submit" value="Add" class="btn btn-block btn-outline-success">
            </form>
        </div>    
</body>
</html>